{% extends "front.html.twig" %}
{% block body %}


    <!-- CORE : begin -->
    <div id="core" class="page-contact-us">

        <!-- PAGE HEADER : begin -->
        <div class="page-header has-nav">
            <div class="container">
                <div class="page-header-inner">
                    <h1>Experiences</h1>
                    <ul class="custom-list breadcrumbs">
                        <li><a href="{{ asset('') }}">Home</a> / </li>
                        <li><a href="contact-us.html">Contact Us</a></li>
                    </ul>
                    <nav class="page-header-nav">
                        <ul class="custom-list clearfix">
                            <li class="active"><a href={{ path('show_exp') }}>My experiences</a></li>
                            <li> <a href={{ path('exp_add') }}>Add new Experience</a></li>


                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- PAGE HEADER : end -->

        <!-- CONTENT SECTION : begin -->
        <section class="content-section">
            <div class="container">

                <div class="row">
                    <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th> Name</th>
                            <th> Type</th>

                            <th> arrival</th>
                            <th> departure</th>
                            <th> Action</th>
                        </tr>
                        </thead>
                        <tfoot>

                        <tr>
                            <th> Name</th>
                            <th> Type</th>

                            <th> arrival</th>
                            <th> departure</th>
                            <th> Action</th>
                        </tr>
                        </tfoot>

                        <tbody>
                        {% for Experience in Experience %}

                            <tr>
                                <td> {{ Experience.getNomXp  }}</td>
                                <td> {{ Experience.type  }}</td>

                                <td> {{ Experience.arrival| date('y/m/d') }} </td>
                                <td> {{ Experience.departure| date('y/m/d') }} </td>
                                <td>
                                    <a href="{{ path('edit_exp',{'idd': Experience.getIdXp}) }}"><button type="button" class="btn btn-primary" >Edit</button></a>
                                    &nbsp;

                                    <a href="{{ path('delete_exp',{'idd':Experience.getIdXp}) }}"><button type="button" class="btn btn-danger" >Delete</button></a>

                                </td>



                                    </br>

                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </section>
        <!-- CONTENT SECTION : end -->

    </div>
    <!-- CORE : end -->






{% block js %}

{% endblock js %}
{% endblock %}