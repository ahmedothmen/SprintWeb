
{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/fosuser/css/style_fosuser.css') }}">
{% endblock %}

<div class="form-top">
    <div class="form-top-left">
        <h3>Inscription</h3>
        <p>Merci de remplir tout les champs</p>
    </div>
    <div class="form-top-right">
        <i class="fa fa-pencil"></i>
    </div>
</div>
<div class="form-bottom">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    <div class="form-group">
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom,{'attr' : {'class' : 'form-control', 'placeholder' : 'Nom'|trans}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.prenom) }}
        {{ form_widget(form.prenom,{'attr' : {'class' : 'form-control', 'placeholder' : 'Prenom'|trans}}) }}
    </div>

    <div class="form-group">
        {{ form_errors(form.email) }}
        {{ form_widget(form.email,{'attr' : {'class' : 'form-control form-email' }}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.username) }}
        {{ form_widget(form.username,{'attr' : {'class' : 'form-control form-username'}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first,{'attr' : {'class' : 'form-control' }}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second,{'attr' : {'class' : 'form-control', 'placeholder' : 'Repetez le mot de passe'|trans}}) }}
    </div>
    <div class="form-group">
        {{ form_errors(form.numtel) }}
        {{ form_widget(form.numtel,{'attr' : {'class' : 'form-control', 'placeholder' : 'Numéro de téléphone'|trans}}) }}
    </div>
    <div>
        <input class="btn btn-primary"  type="submit" value="S'inscrire"  />
    </div>
    {{ form_end(form) }}

</div>

<br><br>