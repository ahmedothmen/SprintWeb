{% extends "front.html.twig" %}
{% block body %}
    <!-- CORE : begin -->
    <div id="core" class="page-property-details">

        <!-- PAGE HEADER : begin -->
        <div class="page-header">
            <div class="container">
                <div class="page-header-inner clearfix">
                    <h1>{{ propriete.titre }}</h1>
                    <ul class="custom-list breadcrumbs">
                        <li><a href="index.html">Home</a> / </li>
                        <li><a href="properties-listing-grid.html">Search Results</a> /</li>
                        <li><a href="property-details-rent.html">Property Details</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- PAGE HEADER : end -->

        <!-- MAIN WRAPPER : begin -->
        <div class="main-wrapper-container">
            <div class="container">
                <div id="main-wrapper">
                    <div class="row">
                        <div class="col-md-8 col-md-push-4">

                            <!-- PROPERTY DETAILS : begin -->
                            <div class="property-details">

                                <!-- PROPERTY IMAGES : begin -->
                                <div class="property-images">
                                    <div class="image-list">
                                        <div class="image"><img src="dummies/property_01.jpg" alt="Salle de bains"></div>
                                        <div class="image"><img src="dummies/property_02.jpg" alt="Cuisine"></div>
                                        <div class="image"><img src="dummies/property_03.jpg" alt="Chambre"></div>
                                    </div>
                                    <div class="images-footer">
                                        <div class="images-footer-inner">
                                            <div class="image-description"></div>
                                            <div class="image-counter"></div>
                                        </div>
                                        <button class="prev-btn"><i class="fa fa-chevron-left"></i></button>
                                        <button class="next-btn"><i class="fa fa-chevron-right"></i></button>
                                    </div>
                                </div>
                                <!-- PROPERTY IMAGES : end -->

                                <div class="row">
                                    <div class="col-md-8">

                                        <!-- PROPERTY DESCRIPTION : begin -->
                                        <div class="property-description">

                                            <!-- DESCRIPTION TEXT : begin -->
                                            <div class="description-text">
                                                <h4>{{ propriete.titre }} Description </h4>
                                                <p>{{ propriete.description }}</p>

                                            </div>
                                            <!-- DESCRIPTION TEXT : end -->

                                            <!-- TABS : begin -->
                                            <div class="tabs-container">
                                                <ul class="tab-title-list">
                                                    <li class="tab-title"><a href="#reviews">Reviews</a></li>
                                                </ul>
                                                <ul class="tab-content-list">



                                                    <!-- COMMENTS TAB : begin -->
                                                    <li class="tab-content active">

                                                        <div class="comments">
                                                            <ul class="custom-list comment-list">

                                                                <!-- COMMENT 1 : begin -->
                                                                <li class="comment">
                                                                    <div class="author"><strong>Mohamed Ali Ben Sedrine </strong> - <span class="date">Nov. 14, 2013</span></div>
                                                                    <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i></div>
                                                                    <div class="review">
                                                                        <p>La maison est bien plac√©e mais elle n'est pas propre</p>
                                                                    </div>
                                                                </li>
                                                                <!-- COMMENT 1 : end -->

                                                                <!-- COMMENT 2 : begin -->
                                                                <li class="comment">
                                                                    <div class="author"><strong>Haroun Gazzah </strong> - <span class="date">Nov. 4, 2013</span></div>
                                                                    <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                                                                    <div class="review">
                                                                        <p>Paifaite</p>
                                                                    </div>
                                                                </li>
                                                                <!-- COMMENT 2 : end -->

                                                                <!-- COMMENT 3 : begin -->
                                                                <li class="comment">
                                                                    <div class="author"><strong>Youssef </strong> - <span class="date">Nov. 1, 2013</span></div>
                                                                    <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                                                                    <div class="review">
                                                                        <p>Je la conseille</p>
                                                                    </div>
                                                                </li>
                                                                <!-- COMMENT 3 : end -->

                                                            </ul>
                                                        </div>

                                                    </li>
                                                    <!-- COMMENTS TAB : end -->

                                                </ul>
                                            </div>
                                            <!-- TABS : end -->

                                        </div>
                                        <!-- PROPERTY DESCRIPTION : end -->

                                    </div>
                                    <div class="col-md-4">

                                        <!-- PROPERTY PANEL : begin -->
                                        <div class="property-panel">
                                            <!-- OBJECT RATING : begin -->
                                            <div class="panel-item object-rating">
                                                <h4 class="panel-item-title">Object Rating</h4>
                                                <p class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-o"></i></p>
                                            </div>
                                            <!-- OBJECT RATING : end -->

                                            <!-- OBJECT PRICE : begin -->
                                            <div class="panel-item object-price">
                                                <h4 class="panel-item-title">Price</h4>
                                                <p class="price">from <strong>{{ propriete.prix }} </strong>DTN/ night</p>
                                            </div>
                                            <!-- OBJECT PRICE : end -->



                                            <!-- OBJECT OWNER : begin -->
                                            <div class="panel-item object-owner">
                                                <h4 class="panel-item-title">Proprietaire</h4>
                                                <div class="clearfix">
                                                    <div class="portrait">
                                                        <img src="dummies/portrait_02_240.jpg" alt="">
                                                        <h5 class="name"><i class="ico-person"></i> {{ propriete.idU }}</h5>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- OBJECT OWNER : end -->
                                            <!-- BOOK FORM : begin -->

                                            <div class="panel-item contact-form">



                                                <h4 class="panel-item-title">Veuillez saisir votre commentaire</h4>
                                                <form class="default-form" action="" method="POST">
                                                    <p class="alert-message warning validation" style="display: none;"><i class="ico fa fa-exclamation-circle"></i> Please fill all fields!</p>

                                                    <p class="form-row">
                                                        <textarea class="required" placeholder="Message" name="contenu" id="contenu"></textarea>
                                                    </p>
                                                    <p class="form-row">
                                                        <button class="button submit-btn"><i class="fa fa-envelope"></i> Envoyez</button>
                                                    </p>
                                                </form>
                                            </div>

                                            <!-- BOOK FORM : end -->

                                        </div>
                                        <!-- PROPERTY PANEL : end -->
                                    </div>
                                </div>

                            </div>
                            <!-- PROPERTY DETAILS : end -->

                        </div>
                        <div class="col-md-4 col-md-pull-8">

                            <!-- PROPERTY LOCATION DETAILS : begin -->
                            <aside class="property-location-details">
                                <h3 class="property-location-title">Location &amp; Details</h3>

                                <!-- PROPERTY MAP : begin -->
                                <div class="property-map">
                                    <iframe src="https://maps.google.com/maps?q=32.524526,-117.12392&amp;num=1&amp;ie=UTF8&amp;ll=32.514104,-117.110953&amp;spn=0.007843,0.013937&amp;t=m&amp;z=14&amp;output=embed"></iframe>
                                    <a href="#" class="map-btn"><i class="fa fa-search-plus"></i></a>
                                </div>
                                <!-- PROPERTY MAP : end -->

                                <!-- PROPERTY INFO : begin -->
                                <div class="property-info">
                                    <h4 class="property-info-title">Details</h4>

                                    <!-- ADDRESS : begin -->
                                    <div class="toggle-container property-address">
                                        <h5 class="toggle-title">Address</h5>
                                        <div class="toggle-content">

                                            <p>{{ propriete.rue }}<br>
                                                {{ propriete.ville }}<br>
                                                {{ propriete.pays }}</p>

                                        </div>
                                    </div>
                                    <!-- ADDRESS : end -->

                                    <!-- ACCOMODATION : begin -->
                                    <div class="toggle-container property-accomodation">
                                        <h5 class="toggle-title">{{ propriete.titre }}</h5>
                                        <div class="toggle-content">

                                            <ul class="custom-list">
                                                <li>Nombre de voyageur <strong>{{ propriete.nbrVoyageur }}</strong></li>
                                                <li>Nombre de chambre <strong>{{ propriete.nbrChambre }}</strong></li>
                                                <li>Categorie de la propriete <strong>{{ propriete.categoriepropriete }}</strong></li>
                                                <li>Type logement <strong>{{ propriete.typepropriete }}</strong></li>
                                            </ul>

                                        </div>
                                    </div>
                                    <!-- ACCOMODATION : end -->

                                    <!-- ADDITIONAL : begin -->
                                    <div class="toggle-container property-additional">
                                        <h5 class="toggle-title">Additional Information</h5>
                                        <div class="toggle-content">

                                            <ul class="custom-list check-list">
                                                <li>{{ propriete.animaux }}</li>
                                                <li>{{ propriete.fumeur }}</li>
                                                <li>{{ propriete.alcool }}</li>
                                                <li>{{ propriete.enfant }}</li>

                                            </ul>

                                        </div>
                                    </div>
                                    <!-- ADDITIONAL : end -->

                                </div>
                                <!-- PROPERTY INFO : end -->

                            </aside>
                            <!-- PROPERTY LOCATION DETAILS : end -->

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- MAIN WRAPPER : end -->

    </div>
    <!-- CORE : end -->

    {% endblock %}
